<script>
    const input = document.getElementById("query");
    const suggestions = document.getElementById("suggestions");
    const searchForm = document.getElementById("searchForm");

    let timeout;
    let currentFocus = -1;

    input.addEventListener("input", () => {
        clearTimeout(timeout);
        const query = input.value.trim();

        if (!query) {
            suggestions.style.display = "none";
            currentFocus = -1;
            return;
        }
        
        timeout = setTimeout(async () => {
            try {
                const res = await fetch(
                    `http://localhost:8080/listings/api/suggestions?q=${encodeURIComponent(query)}`
                );
                const data = await res.json();

                if (data.length === 0) {
                    suggestions.innerHTML = '<div class="no-suggestions">No destinations found</div>';
                    suggestions.style.display = "block";
                    return;
                }

                suggestions.innerHTML = data
                    .map(
                        (s) => `<div class="suggestion-item">${s.location}</div>`
                    )
                    .join("");
                suggestions.style.display = "block";
                currentFocus = -1;

                document.querySelectorAll(".suggestion-item").forEach((item, index) => {
                    item.addEventListener("click", () => {
                        input.value = item.textContent;
                        suggestions.style.display = "none";
                        performSearch(item.textContent);
                    });
                    
                    item.addEventListener("mouseover", () => {
                        // Remove active class from all items
                        document.querySelectorAll(".suggestion-item").forEach(el => {
                            el.classList.remove("active");
                        });
                        // Add active class to hovered item
                        item.classList.add("active");
                        currentFocus = index;
                    });
                });
            } catch (error) {
                console.error("Error fetching suggestions:", error);
                suggestions.innerHTML = '<div class="no-suggestions">Error loading suggestions</div>';
                suggestions.style.display = "block";
            }
        }, 300);
    });

    // Keyboard navigation for suggestions
    input.addEventListener("keydown", (e) => {
        const items = document.querySelectorAll(".suggestion-item");
        
        if (items.length > 0) {
            if (e.key === "ArrowDown") {
                e.preventDefault();
                currentFocus = (currentFocus + 1) % items.length;
                updateActiveItem(items);
            } else if (e.key === "ArrowUp") {
                e.preventDefault();
                currentFocus = (currentFocus - 1 + items.length) % items.length;
                updateActiveItem(items);
            } else if (e.key === "Enter" && currentFocus > -1) {
                e.preventDefault();
                input.value = items[currentFocus].textContent;
                suggestions.style.display = "none";
                performSearch(items[currentFocus].textContent);
            }
        }
    });

    function updateActiveItem(items) {
        items.forEach(item => item.classList.remove("active"));
        if (currentFocus > -1) {
            items[currentFocus].classList.add("active");
            // Scroll into view if needed
            items[currentFocus].scrollIntoView({ block: "nearest" });
        }
    }

    document.addEventListener("click", (e) => {
        if (!input.contains(e.target) && !suggestions.contains(e.target)) {
            suggestions.style.display = "none";
            currentFocus = -1;
        }
    });

    searchForm.addEventListener("submit", (e) => {
        e.preventDefault();
        performSearch(input.value);
        suggestions.style.display = "none";
        currentFocus = -1;
    });

    async function performSearch(q) {
        if (q.trim()) {
            window.location.href = `http://localhost:8080/listings/api/search?q=${encodeURIComponent(q)}`;
        }
    }

    // Ensure Bootstrap dropdowns work correctly
    document.addEventListener('DOMContentLoaded', function() {
        var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
        var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
            return new bootstrap.Dropdown(dropdownToggleEl);
        });
    });
</script>