            align-items: stretch;
        }
        
        .search-inp {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .search-btn {
            width: 100%;
            margin-left: 0 !important;
        }

        .navbar-nav.ms-auto {
            margin-top: 1rem;
        }
        
        #suggestions {
            position: relative;
            margin-top: 0;
            border-radius: 0 0 12px 12px;
        }
